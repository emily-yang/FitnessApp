<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_title"
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:text="Sample Workout"
                    android:textColor="@color/olive"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/more_workout_button"
                    android:paddingTop="16dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:srcCompat="@drawable/ic_delete" />

            </LinearLayout>


            <TextView
                android:id="@+id/week_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="24dp"
                android:text="Day of the Week"
                android:textColor="@color/middlegray" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@color/lightredpink"
                android:layout_gravity="right"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/number_workout_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    app:srcCompat="@drawable/ic_my_workout_icon" />

                <TextView
                    android:id="@+id/number_workout"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:text="00"
                    android:textColor="@color/teal" />

                <TextView
                    android:id="@+id/previous_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="2dp"
                    android:text="LAST DATE: "
                    android:textAllCaps="true"
                    android:textColor="@color/teal"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:text="01/01/2018"
                    android:textColor="@color/teal"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>