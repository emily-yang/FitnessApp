<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/find_events_app_bar"></include>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/lightgray"
        android:queryHint="Search"/>

    <TextView
        android:id="@+id/upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="UPCOMING EVENTS"
        android:textColor="@color/darkerred"
        android:textSize="11sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/placeholder"
        android:layout_margin="30dp"

        android:layout_width="200dp"
        android:layout_height="200dp"
        layout:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/browsetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="BROWSE BY TYPE"
        android:textColor="@color/darkerred"
        android:textSize="11sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/find_browse_list_view_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:clipChildren="true"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:elevation="2dp" />

</LinearLayout>